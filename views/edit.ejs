<%- include('partials/header') %>

<body>
  <H2>Edit Data Siswa</H2>
    <form action="" method="POST">
      <label for="nama"> Nama</label>
      <input style="background-color: darkgoldenrod;" class="form-control" type="text" placeholder="Default input" aria-label="default input example" name="nama" value="<%= data[0].nama %>">
      <label for="umur"> Umur</label>
      <input style="background-color:cyan;" class="form-control" type="number" placeholder="Default input" aria-label="default input example" name="umur" value="<%= data[0].umur %>">
      <label for="tinggi"> Tinggi</label>
      <input style="background-color: darkgoldenrod;"  class="form-control" type="number" step="0.01" placeholder="Default input" aria-label="default input example" name="tinggi" value="<%= data[0].tinggi %>">
      <label for="tanggalLahir"> Tanggal Lahir</label>
      <input style="background-color: cyan;" class="form-control" type="date" placeholder="Default input" aria-label="default input example" name="ttl" value="<%= data[0].ttl %>">
      <label for="jomblo"> Jomblo?</label>
      <select style="background-color: darkgoldenrod;" class="form-select form-select-sm" aria-label=".form-select-sm example" name="jomblo" value="<%= data[0].jomblo %>">
        <option hidden>Pilih Status..</option>
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
      <button type="submit" class="btn btn-outline-success">Save</button> <a href="/" class="btn btn-outline-danger">Cancel</a>
    </form>
    

<%- include('partials/footer') %>